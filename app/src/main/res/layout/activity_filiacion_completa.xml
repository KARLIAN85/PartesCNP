<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nombre -->
        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre" />

        <!-- Primer Apellido -->
        <EditText
            android:id="@+id/etPrimerApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Primer Apellido" />

        <!-- Segundo Apellido -->
        <EditText
            android:id="@+id/etSegundoApellido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Segundo Apellido" />

        <!-- Fecha de Nacimiento -->
        <EditText
            android:id="@+id/etFechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Nacimiento"
            android:inputType="date" />
        <!-- documentacion -->
        <AutoCompleteTextView
            android:id="@+id/etTipoDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccione Tipo de Documento"
            android:inputType="none" />

        <EditText
            android:id="@+id/etNumeroDocumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numero" />

        <!-- Dirección -->
        <AutoCompleteTextView
            android:id="@+id/etTipoVia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seleccione Tipo de Via"
            android:inputType="none" />

        <EditText
            android:id="@+id/etDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección" />

        <EditText
            android:id="@+id/etNumeroDirecion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Número" />

        <!-- Ciudad -->
        <EditText
            android:id="@+id/etCiudadDirecion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad" />

        <!-- Comunidad -->
        <EditText
            android:id="@+id/etComunidadDirecion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comunidad Autónoma" />

        <!-- Lugar de Nacimiento -->
        <EditText
            android:id="@+id/etLugarNacimientoCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ciudad de Nacimiento" />

        <EditText
            android:id="@+id/etLugarNacimientoComunidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comunidad de Nacimiento" />

        <EditText
            android:id="@+id/etLugarNacimientoPais"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="País de Nacimiento" />

        <!-- Nombre del Padre y Madre -->
        <EditText
            android:id="@+id/etNombrePadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del Padre" />

        <EditText
            android:id="@+id/etNombreMadre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre de la Madre" />

        <!-- Teléfono -->
        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone" />

        <!-- Código -->
        <EditText
            android:id="@+id/etCodigoAntecedentes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Código" />

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />
    </LinearLayout>
</ScrollView>
